{
  "name": "cross-browser-extension",
  "displayName": "Cross Browser Extension Boilerplate",
  "description": "Example extension - Cross Browser Extension Boilerplate",
  "license": "Beerware",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node --loader ts-node/esm --experimental-specifier-resolution=node ./scripts/build/index.ts --watch --runBrowser",
    "build": "node --loader ts-node/esm --experimental-specifier-resolution=node ./scripts/build/index.ts --archive",
    "checkTs": "tsc --noEmit",
    "build:css": "npx tailwindcss -i ./src/pages/popup/input.css -o ./src/pages/popup/index.css",
    "eslint": "eslint --ext js,ts,tsx",
    "lint": "npm run eslint src",
    "lint:fix": "npm run eslint --fix src"
  },
  "author": "",
  "devDependencies": {
    "@esbuilder/html": "^0.0.6",
    "@types/archiver": "^6.0.3",
    "@types/chrome": "^0.0.289",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/postcss-import": "^14.0.3",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cssnano": "^7.0.6",
    "esbuild": "0.24.2",
    "esbuild-style-plugin": "^1.6.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "fs-extra": "^11.2.0",
    "get-installed-browsers": "^0.1.7",
    "jest": "^29.7.0",
    "less": "^4.2.1",
    "node-watch": "^0.7.4",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.49",
    "postcss-discard-comments": "^7.0.3",
    "postcss-import": "^16.1.0",
    "postcss-plugin-namespace": "^0.0.3",
    "sass": "^1.83.1",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "web-ext": "^8.3.0"
  },
  "dependencies": {
    "esbuild-postcss": "^0.0.4",
    "postcss-cli": "^11.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailgrids": "^2.2.7"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run checkTs && lint-staged"
    }
  }
}
